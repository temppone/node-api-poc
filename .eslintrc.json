{
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "env": {
    "node": true,
    "browser": true
  },

  "plugins": ["import", "prettier"],

  "parserOptions": {
    "ecmaVersion": 6,
    "project": "./tsconfig.json"
  },

  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],

    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off"
  }
}
